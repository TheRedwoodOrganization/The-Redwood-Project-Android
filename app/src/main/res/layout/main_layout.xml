<!-- The DrawerLayout consists of two views: the layout for the main content view and the navigation drawer -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            tools:context=".MyActivity"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:text="The redwood project">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                android:textSize="12sp"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="Login button"
                android:layout_gravity="right"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_or_detail_page"
                android:textSize="12sp"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="Registration button"
                android:layout_gravity="right"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <FrameLayout
                android:name="be.redwood.the_redwood_project.activities.LoginPageFragment"
                android:id="@+id/place_for_the_real_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <!-- The navigation drawer view-->
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/show_overview_blogs"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Overview Blogs"/>

            <Button
                android:id="@+id/create_blog"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Create blog (temporary link)"/>

            <Button
                android:id="@+id/create_post"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Create post (temporary link)"/>

            <Button
                android:id="@+id/create_comment"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Create comment (temporary link)"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>