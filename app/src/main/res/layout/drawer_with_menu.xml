<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/show_overview_blogs"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Overview Blogs"/>

    <Button
        android:id="@+id/create_blog"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Create blog (temporary link)"/>

    <Button
        android:id="@+id/create_post"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Create post (temporary link)"/>

    <Button
        android:id="@+id/create_comment"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Create comment (temporary link)"/>

</LinearLayout>