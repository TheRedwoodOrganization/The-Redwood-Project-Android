<!-- The DrawerLayout consists of two views: the layout for the main content view and the navigation drawer -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Redwood">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:text="OVERVIEW BLOGS"
            android:background="@color/green"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/blogList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <!-- The navigation drawer view-->
    <LinearLayout
        android:layout_gravity="start"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:name="be.redwood.the_redwood_project.activities.DrawerFragmentFactory"
            android:id="@+id/drawer_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>