<!-- The DrawerLayout consists of two views: the layout for the main content view and the navigation drawer -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="LOGIN PAGE"
        android:background="@color/green"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Username:" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:color="@color/silver"
            android:hint="give in your username"
            android:textColorHighlight="@color/green"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Password:" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="give in your password"
            android:inputType="textPassword"
            android:textSize="12dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="Login"/>

    <TextView
        android:id="@+id/fault_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="@string/fault_message_login"
        android:layout_marginLeft="30dp"
        android:visibility="invisible" />

</LinearLayout>


    <!-- The navigation drawer view-->
<LinearLayout
android:layout_gravity="start"
android:layout_width="260dp"
android:layout_height="match_parent"
android:orientation="vertical">

    <FrameLayout
        android:name="be.redwood.the_redwood_project.activities.DrawerFragmentFactory"
        android:id="@+id/drawer_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

    </android.support.v4.widget.DrawerLayout>